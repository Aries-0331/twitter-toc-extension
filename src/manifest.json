{
  "$schema": "https://json.schemastore.org/chrome-manifest.json",
  "chromium:manifest_version": 3,
  "firefox:manifest_version": 2,
  "version": "1.0.0",
  "name": "Twitter TOC",
  "description": "Twitter Article Table of Contents - Navigate long-form Twitter articles with an interactive table of contents",
  "icons": {
    "16": "images/icon.png",
    "32": "images/icon.png",
    "48": "images/icon.png",
    "64": "images/icon.png",
    "128": "images/icon.png"
  },
  "chromium:action": {
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "64": "images/icon.png",
      "128": "images/icon.png"
    },
    "default_popup": "popup/index.html",
    "default_title": "Twitter TOC"
  },
  "chromium:options_page": "options/index.html",
  "firefox:browser_action": {
    "default_icon": {
      "16": "images/icon.png",
      "32": "images/icon.png",
      "48": "images/icon.png",
      "64": "images/icon.png",
      "128": "images/icon.png"
    },
    "default_popup": "popup/index.html",
    "default_title": "Twitter TOC"
  },
  "chromium:permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "storage"
  ],
  "chromium:host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
  ],
  "background": {
    "chromium:service_worker": "background.js",
    "firefox:scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": [
        "content/scripts.js"
      ],
      "css": [
        "content/styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "author": "Your Name"
}